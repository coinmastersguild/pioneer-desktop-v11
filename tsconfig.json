{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "pioneer-engine": ["packages/pioneer-engine/src"],
      "pioneer-cli": ["packages/pioneer-cli/src"]
    }
  },
  "include": ["apps/**/*", "packages/**/*"],
  "references": [
    { "path": "./packages/pioneer-engine" },
    { "path": "./packages/pioneer-cli" }
  ]
}
