{
  "name": "pioneer-desktop-v10",
  "version": "0.1.1",
  "main": "dist-electron/main.js",
  "description": "Pioneer Desktop Application with SQLite",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cd apps/pioneer-desktop && pnpm run dev",
    "build": "cd apps/pioneer-desktop && pnpm run build",
    "rebuild": "electron rebuild.js",
    "postinstall": "npm run rebuild",
    "version-bump": "node scripts/version-bump.js",
    "cli:dev": "cd apps/cli && pnpm run dev",
    "cli:build": "cd apps/cli && pnpm run build",
    "cli:test": "cd apps/cli && pnpm run test",
    "cli:mcp": "cd apps/cli && node dist/cli.js mcp-stdio",
    "git": "./scripts/git-wrapper.sh",
    "git:status": "./scripts/git-wrapper.sh status",
    "git:checkout": "./scripts/git-wrapper.sh checkout",
    "git:pull": "./scripts/git-wrapper.sh pull",
    "git:push": "./scripts/git-wrapper.sh push",
    "git:feature": "./scripts/git-wrapper.sh checkout -b feature-",
    "git:hotfix": "./scripts/git-wrapper.sh checkout -b hotfix-",
    "git:release": "./scripts/git-wrapper.sh checkout -b release-",
    "pr:create": "./scripts/local-pr.sh create",
    "pr:review": "./scripts/local-pr.sh review",
    "pr:merge": "./scripts/local-pr.sh merge",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "build-packages": "pnpm --filter @pioneer-platform/pioneer-engine build && pnpm --filter @pioneer-platform/pioneer-cli build",
    "publish-packages": "pnpm build-packages && changeset publish --no-git-tag",
    "quick-publish": "CHANGESET_SKIP_CONFIRMATION=1 pnpm changeset add --empty && CHANGESET_SKIP_CONFIRMATION=1 pnpm version-packages && pnpm publish-packages"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.14.10",
    "better-sqlite3": "^11.1.2",
    "electron": "^35.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-electron": "^0.28.7"
  },
  "dependencies": {
    "@types/diff": "^7.0.1",
    "@types/express": "^5.0.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "diff": "^7.0.0",
    "express": "^4.21.2",
    "prismjs": "^1.29.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
