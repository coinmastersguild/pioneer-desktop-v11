{
  "name": "@pioneer-platform/pioneer-engine",
  "version": "0.1.2",
  "description": "Core engine for Pioneer Desktop and CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "clean": "rimraf dist",
    "test:unit": "jest",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "search": "npm run build && node examples/search.js",
    "skill": "npm run build && node examples/skill.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "knex": "^3.1.0",
    "axios": "^1.6.8",
    "dotenv": "^8.6.0",
    "fs-extra": "^11.2.0",
    "node-cron": "^3.0.3",
    "ollama": "^0.5.12",
    "openai": "^3.3.0",
    "tiktoken": "^1.0.18",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.10",
    "@types/uuid": "^9.0.8",
    "chai": "^4.4.1",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^8.10.2",
    "typescript": "^5.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/unit/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}